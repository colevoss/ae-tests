{
  "name": "typescript-node-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "test": "jest",
    "commit": "git-cz",
    "prebuild": "rimraf build",
    "dev": "nodemon --config nodemon.json --inspect=0.0.0.0 src/index.ts",
    "build": "npm run tsc",
    "prettier": "prettier",
    "spec": "swagger-cli bundle src/spec.yaml -o spec.yaml -t yaml",
    "spec:val": "swagger-cli validate src/spec.yaml",
    "spec:view": "swagger-cli bundle src/spec.yaml -t yaml"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@prisma/cli": "^2.13.1",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.17",
    "@types/pino": "^6.3.4",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{js,ts,md,yaml,json}": "prettier --write"
  },
  "dependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@prisma/client": "^2.13.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.3.1",
    "openapi-markdown": "^1.2.3",
    "pino": "^6.8.0",
    "pino-pretty": "^4.3.0"
  }
}
